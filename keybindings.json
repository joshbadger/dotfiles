// Place your key bindings in this file to override the defaultsauto[]
[
    {
        "key": "ctrl+b",
        "command": "workbench.action.toggleSidebarVisibility"
    },
    {
        "key": "ctrl+p",
        "command": "workbench.files.action.showActiveFileInExplorer"
    },
    {
        "key": "ctrl+n",
        "command": "workbench.action.focusSideBar"
    },
    {
        "key": "ctrl+shift+m",
        "command": "-editor.action.toggleTabFocusMode"
    },
    {
        "key": "ctrl+shift+m",
        "command": "markdown.showPreview",
        "when": "!notebookEditorFocused && editorLangId == 'markdown'"
    },
    {
        "key": "shift+cmd+v",
        "command": "-markdown.showPreview",
        "when": "!notebookEditorFocused && editorLangId == 'markdown'"
    },
    {
        "key": "ctrl+shift+f",
        "command": "cursorPageDown",
        "when": "textInputFocus"
    },
    {
        "key": "pagedown",
        "command": "-cursorPageDown",
        "when": "textInputFocus"
    },
    {
        "key": "ctrl+shift+b",
        "command": "cursorPageUp",
        "when": "textInputFocus"
    },
    {
        "key": "pageup",
        "command": "-cursorPageUp",
        "when": "textInputFocus"
    },
    {
        "key": "ctrl+`",
        "command": "-workbench.action.terminal.toggleTerminal"
    },
    {
        "key": "ctrl+`",
        "command": "workbench.action.terminal.toggleTerminal"
    },
    {
        "key": "ctrl+shift+=",
        "command": "workbench.action.toggleMaximizedPanel"
    },
    {
        "key": "cmd+k l",
        "command": "workbench.action.splitEditorRight"
    },
    {
        "key": "cmd+k h",
        "command": "workbench.action.splitEditorLeft"
    },
    {
        "key": "cmd+k j",
        "command": "workbench.action.splitEditorDown"
    },
    {
        "key": "cmd+k k",
        "command": "workbench.action.splitEditorUp"
    },
    {
        "key": "ctrl+j",
        "command": "-extension.vim_ctrl+j",
        "when": "editorTextFocus && vim.active && vim.use<C-j> && !inDebugRepl"
    },
    {
        "key": "cmd+k cmd+l",
        "command": "editor.toggleFold",
        "when": "editorTextFocus && foldingEnabled"
    },
    {
        "key": "cmd+k cmd+l",
        "command": "-editor.toggleFold",
        "when": "editorTextFocus && foldingEnabled"
    },
    { "key": "cmd+k",
      "command": "workbench.action.terminal.clear",
      "when": "terminalFocus"
    },
    {
        "key": "ctrl+m",
        "command": "-extension.vim_ctrl+m",
        "when": "editorTextFocus && vim.active && vim.use<C-m> && !inDebugRepl || vim.active && vim.use<C-m> && !inDebugRepl && vim.mode == 'CommandlineInProgress' || vim.active && vim.use<C-m> && !inDebugRepl && vim.mode == 'SearchInProgressMode'"
    },
    {
        "key": "ctrl+m ctrl+b",
        "command": "merge-conflict.accept.both"
    },
    {
        "key": "ctrl+m ctrl+c",
        "command": "merge-conflict.accept.current"
    },
    {
        "key": "ctrl+m ctrl+i",
        "command": "merge-conflict.accept.incoming"
    },
    {
        "key": "ctrl+m ctrl+j",
        "command": "merge-conflict.next"
    },
    {
        "key": "ctrl+m ctrl+k",
        "command": "merge-conflict.previous"
    },
    {
        "key": "cmd+d",
        "command": "-editor.action.addSelectionToNextFindMatch",
        "when": "editorFocus"
    }
]